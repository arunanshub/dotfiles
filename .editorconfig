root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.html]
indent_style = space
indent_size = 4

[*.{py,rs,c,h,sh,vim,toml}]
indent_style = space
indent_size = 4
max_line_length = 79

[*.{md,rst}]
indent_style = space
indent_size = 3
max_line_length = 79

[*.go]
indent_style = tab
max_line_length = 79

[{*.lua,meson.build}]
indent_style = space
indent_size = 2
max_line_length = 79
